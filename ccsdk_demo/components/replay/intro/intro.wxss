/* components/replay/intro/intro.wxss */
.container {
    background: #f3f3f3;
    width: 100%;
    height: 100%;
    overflow-y:scroll;
}

.container .title {
    background: #fff;
    box-shadow: 0rpx 1rpx 0rpx 0rpx #e8e8e8;
    line-height: 48rpx;
    margin-bottom: 2rpx;
    padding: 21rpx 30rpx;
}

.container .title text {
    font-size: 32rpx;
    color: #ff7d00;
}

.container .content {
    background: #fff;
    box-sizing: border-box;
    padding: 30rpx;
}

.container .content rich-text {
    font-size: 30rpx;
    color: #333;
}