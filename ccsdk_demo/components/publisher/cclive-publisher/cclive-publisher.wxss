.container {
    /* position: absolute; */
    width: 100%;
    height: 100%;
    /* background-color: pink; */
}

.container live-pusher {
    width: 100%;
    height: 100%;
}

.container .cover-view {
    height: 100%;
    margin-left: 30rpx;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}

/*网络链接提示*/

.container .cover-view .net-info {
    position: absolute;
    right: 60rpx;
    top:40rpx;
}

.container .cover-view .net-info .info {
    font-size: 26rpx;
}

/* header */

.container .cover-view .header {
    display: flex;
    align-items: center;
    margin-top: 30rpx;
}

.container .cover-view .header .info {
    background-color: rgba(30, 31, 33, 0.3);
    border-radius: 100rpx;
    max-width: 340rpx;
    height: 90rpx;
    display: inline-block;
    overflow: hidden;
    padding-right: 35rpx;
}

.container .cover-view .header .info .name {
    font-size: 26rpx;
    color: #fff;
    text-shadow: 0rpx 0rpx 2rpx rgba(0, 0, 0, 0.4);
    margin: 13rpx 0rpx 14rpx 35rpx;
    width: 100%;
}

.container .cover-view .header .info .number {
    font-size: 26rpx;
    color: #fff;
    text-shadow: 0rpx 0rpx 2rpx rgba(0, 0, 0, 0.4);
    margin: 0rpx 0rpx 0rpx 35rpx;
    width: 100%;
}

/* body */

.container .body {
}

/* chat */

.container .body .chat-content {
    width: 640rpx;
    height: 300rpx;
    overflow-y: scroll;
    margin-bottom: 49rpx;
}

.container .body .chat-content .chat-cell {
    width: 100%;
    white-space: normal;
    word-wrap: break-word;
    margin-bottom: 20rpx;
    font-size: 32rpx;
    color: #ff5301;
    text-shadow: 0rpx 0rpx 2rpx rgba(0, 0, 0, 0.4);
    line-height: 42rpx;
}

.container .body .chat-content .chat-cell .message {
    width: 100%;
    font-size: 32rpx;
    line-height: 42rpx;
    color: #f7f7f7;
    text-shadow: 0rpx 0rpx 2rpx rgba(0, 0, 0, 0.4);
    white-space: normal;
    word-wrap: break-word;
    display: inline;
    vertical-align: middle;
}

/* footer */

.container .cover-view .body .footer {
    display: flex;
    justify-content: space-between;
    margin-bottom: 25rpx;
}

.container .cover-view .body .footer .left cover-image {
    float: left;
}

.container .cover-view .body .footer cover-image {
    width: 80rpx;
    height: 80rpx;
    margin-right: 30rpx;
}
