/* 背景 */

.container {
    position: absolute;
    width: 100%;
    height: 100%;
    background: #fafafa;
}

/* 头部样式 */

.container .header {
    height: 88rpx;
    box-sizing: border-box;
    padding: 0 30rpx;
    display: flex;
    align-items: center;
}

.container .header .title {
    font-size: 26rpx;
    color: #666;
}

/* 表单样式 */

.container .body {
    background-color: #fff;
    border: 1rpx solid #e8e8e8;
    border-left: none;
    border-right: none;
    margin-bottom: 70rpx;
}

.container .body .form {
    width: 670rpx;
    margin: 0 auto;
}

.container .body .form .form-cell {
    border-bottom: 1rpx solid #e8e8e8;
    height: 88rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.container .body .form .last {
    border-bottom: none;
}

/* 表单内容 */

.container .body .form .form-cell text {
    font-family: PingFangSC-Regular;
    font-size: 28rpx;
    color: #333;
}

/* radio */

.container .body .form .form-cell .radio-frame-allow {
    border: 4rpx solid #ffb399;
    border-radius: 50%;
    width: 28rpx;
    height: 28rpx;
    display: flex;
    align-items: center;
    justify-content: center;
}

.container .body .form .form-cell .radio-frame-allow .radio {
    background-image: linear-gradient(-90deg, #ff5301 0%, #ff8e00 100%);
    border-radius: 50%;
    width: 20rpx;
    height: 20rpx;
}

.container .body .form .form-cell .radio-frame-ban {
    border: 4rpx solid #999;
    border-radius: 100rpx;
    width: 24rpx;
    height: 24rpx;
}

.container .body .form .form-cell .radio-frame-ban .radio {
    display: none;
}
